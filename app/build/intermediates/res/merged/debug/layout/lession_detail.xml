<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">


    <ImageView android:id="@+id/img_location"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:layout_width="81dp"
        android:layout_height="80dp"
        android:padding="8dip"
        android:src="@drawable/profile"
        android:layout_weight="0.17"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/layout_tv_ls">
    </ImageView>
    <LinearLayout android:orientation="vertical"
        android:id="@+id/layout_tv_ls"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingLeft="5dip"
        android:layout_toLeftOf="@+id/tv_status"
        android:layout_toRightOf="@+id/img_location"
        android:layout_toEndOf="@+id/img_location">
        <TextView android:textStyle="bold"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:text="Super Minion"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingBottom="5dip"
            android:paddingTop="5dip">
        </TextView>
        <TextView android:text="Hãng phim truyện nhựa Việt Nam"
            android:id="@+id/tv_class"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:singleLine="true" android:padding="1px"
            android:textColor="#72A8C6"></TextView>
        <TextView
            android:id="@+id/tv_studentid"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="Số 43 Nguyễn Chí Thanh, Hà Nội"
            />
    </LinearLayout>


    <Button
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:gravity="right|center_horizontal|fill"
        android:padding="5dip"
        android:singleLine="true"
        android:text="Status"
        android:layout_marginBottom="22dp"
        android:layout_alignBottom="@+id/layout_tv_ls"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></Button>
</RelativeLayout>
